{
  "name": "inventory-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "next dev --webpack",
    "dev:next": "next dev --webpack",
    "dev:electron": "concurrently \"npm:dev:next\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "build:next": "next build",
    "dist": "npm run build:next && electron-builder",
    "start": "next start",
    "lint": "eslint"
  },
  "build": {
    "appId": "com.cielo.inventory",
    "productName": "PC Inventory",
    "files": [
      "electron/**",
      ".next/**",
      "public/**",
      "package.json",
      "node_modules/**"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^32.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
